import React from "react";

class App extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      data: 0
    };
    this.setNewNumber = this.setNewNumber.bind(this);
    console.log("Hello from constructor A");
  }
  UNSAFE_componentWillMount() {
    console.log("ComponentA WILL MOUNT!");
  }
  componentDidMount() {
    console.log("ComponentA DID MOUNT!");
  }

  shouldComponentUpdate(newProps, newState) {
    console.log("Hello from shuld componentA update", newProps, newState);
    return true;
  }
  UNSAFE_componentWillUpdate(nextProps, nextState) {
    console.log("ComponentA WILL UPDATE!", nextProps, nextState);
    console.log(this.state.data);
    if (nextState.data === 5) {
      this.setState({ data: 2 });
    }
    console.log(this.state.data);
  }
  componentDidUpdate(prevProps, prevState) {
    console.log("ComponentA DID UPDATE!", prevProps, prevState);
  }
  componentWillUnmount() {
    console.log("ComponentA WILL UNMOUNT!");
  }
  setNewNumber() {
    this.setState({ data: this.state.data + 1 });
  }
  render() {
    return (
      <div>
        <button onClick={this.setNewNumber}>INCREMENT</button>
        <Content myNumber={this.state.data}></Content>
      </div>
    );
  }
}
class Content extends React.Component {
  constructor() {
    super();
    console.log("Hello from  constructor B");
  }
  UNSAFE_componentWillMount() {
    console.log("ComponentB WILL MOUNT!");
  }
  componentDidMount() {
    console.log("ComponentB DID MOUNT!");
  }

  shouldComponentUpdate(newProps, newState) {
    console.log("Hello from should componentB update", newProps, newState);
    return true;
  }
  UNSAFE_componentWillUpdate(nextProps, nextState) {
    console.log("ComponentB WILL UPDATE!", nextProps, nextState);
  }
  componentDidUpdate(prevProps, prevState) {
    console.log("ComponentB DID UPDATE!", prevProps, prevState);
  }
  componentWillUnmount() {
    console.log("ComponentB WILL UMOUNT!");
  }
  render() {
    return (
      <div>
        <h3>{this.props.myNumber}</h3>
      </div>
    );
  }
}
export default App;